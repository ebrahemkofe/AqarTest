<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#343053">

<FrameLayout
        android:id="@+id/frame"
        android:layout_below="@id/linear"
        android:layout_above="@id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="In side "
            android:layout_marginRight="10dp"
            android:background="@drawable/inputbutton"
            android:layout_height="40dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/inputbutton2"
            android:text="Out side"
            android:textColor="#ffffff"
            android:layout_height="40dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/inputbutton3"
            android:text="compound"
            android:textColor="#ffffff"
            android:layout_height="40dp" />


    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        app:itemTextColor="#ffffff"
        app:menu="@menu/navigation" >

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>